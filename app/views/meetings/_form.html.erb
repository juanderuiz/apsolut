
<div class="col-sm-3 col-sm-offset-1 col-xs-3 bg-info text-center">
  	<h3>New Meeting</h3>

	<%= bootstrap_form_for([@user, @meeting]) do |f| %>
	    <%= f.form_group do %>
        <%= f.text_field :subject, label:"What's the meeting about?", :placeholder => "Budget negotiation..." %>
      <% end %>
      <%= f.form_group do %>
        <%= f.text_field :day, label:"Date", :placeholder => "yyyy-mm-dd" %>
      <% end %>
	    <%= f.time_field :start, :placeholder => "hh:mm" %>
	    <%= f.time_field :finish %>
	    <%= f.text_field :room %>
	    <%= f.form_group do %>
	      <%= f.submit "Add Meeting", class: "btn btn-primary btn-lg" %>
	    <% end %>
	<% end %>
</div>