<div class="row">
  <div class="col-sm-4 col-sm-offset-4 col-xs-12 bg-info text-center">
  <%= bootstrap_form_for([@user, @photo]) do |form| %>
    <%= form.form_group do %>
      <%= form.file_field :image, label:"Choose your profile photo" %>
    <% end %>
    <%= form.form_group do %>
      <%= form.submit 'Add Photo', class: "btn btn-primary btn-lg" %>
    <% end %>
  <% end %>
  </div>
</div>


