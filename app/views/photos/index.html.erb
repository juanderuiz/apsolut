<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Las Mejores Fotos de Nuestra Boda</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <%= form_for @photo do |form| %>
    <%= form.file_field :image %>
	<%= form.submit 'Gracias!' %>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Ya tenemos <%= @total %> fotos!</h2>
  </div>
</div>

<div class="row">
  <ul>
    <%= render @photos %>
  </ul>
</div>
