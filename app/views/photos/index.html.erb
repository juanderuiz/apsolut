<div class="row">
  <div class="col-xs-12 text-center">
    <h2>Ya tenemos <%= @total %> fotos! <span><%= link_to "Subir mÃ¡s", controller: "photos", action: "new" %></span></h2>
    
  </div>
</div>

<div class="row visible-xs">
    <table class="table">
      <% @photoxs.each do |photo| %>
      <tr class="col-xs-12">
        <%= render photo %>
      </tr>
      <% end %>
	  </table>
</div>

<div class="row hidden-xs">
  <table class="table">
    <% i=0; rowplace=1; %>
    <% while (i<@total) do %>
    <% foto = @photos.at(i) %>
    <% if (rowplace==1) %>
      <tr class="col-sm-12">
    <% end %>
    <%= render foto %>
    <% if (rowplace==3 || i==@total) %>
      </tr>
      <% rowplace = 0 %>
    <% end %>
    <% i = i+1 %>
    <% rowplace = rowplace + 1 %>
    <% end %>
  </table>
</div>