<div class="col-sm-4 col-sm-offset-4 bg-info text-center">
	<%= bootstrap_form_for([@user, @quarter]) do |f| %>
	    <%= f.form_group do %>
        <%= f.number_field :hours, label:"Booked hours", :placeholder => "Ej: 368" %>
      <% end %>
      <%= f.form_group do %>
        <%= f.select :quart, (1..4), label:"Which quarter?" %>
      <% end %>
      <%= f.form_group do %>
        <%= f.select :year, (Time.now.year-1..Time.now.year+1), label: "Select year", include_blank: "Choose the year" %>
      <% end %>
	    <%= f.form_group do %>
	      <%= f.submit "Edit Quarter", class: "btn btn-primary btn-lg" %>
	    <% end %>
      <%= link_to 'Delete', [@user, @quarter], method: :delete, data: {confirm: "Are you sure?"} %></li>
	<% end %>
</div>